<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApontamentoPerdas"
    android:windowSoftInputMode="adjustResize|adjustPan">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keepScreenOn="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:helperText="Campo Automatico"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/textInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/finalDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:hint="@string/data_de_finalizacao"
                    android:singleLine="true"
                    android:tooltipText="@string/data_de_finalizacao" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:helperText="Campo Automatico"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/textInputLayout3"
                app:layout_constraintStart_toEndOf="@+id/textInputLayout2"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/finalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:hint="@string/hora_de_finalizacao"
                    android:singleLine="true"
                    android:tooltipText="@string/hora_de_finalizacao" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:helperText="* Obrigatório"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/textInputLayout4"
                app:layout_constraintStart_toEndOf="@+id/textInputLayout"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/caixasAvulsas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/caixas_avulsas"
                    android:inputType="number"
                    android:keyboardNavigationCluster="true"
                    android:longClickable="false"
                    android:singleLine="true"
                    android:tooltipText="@string/caixas_avulsas" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:helperText="* Obrigatório"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textInputLayout3"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/qtdAvulsas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/quantidade_avulsas"
                    android:inputType="number"
                    android:singleLine="true"
                    android:tooltipText="@string/quantidade_avulsas" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Está pronto acima daqui-->

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/perdas"
                android:textAlignment="center"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />


            <Spinner
                android:id="@+id/motivo1"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hapticFeedbackEnabled="true"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toTopOf="@+id/motivo2"
                app:layout_constraintEnd_toStartOf="@+id/perda1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintWidth_percent="0.8" />


            <EditText
                android:id="@+id/perda1"
                style="android.R.drawable.custom_background_effect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#C3C3C3"
                android:hint="@string/perdas"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="23sp"
                android:tooltipText="Digite aqui o motivo"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/perda2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/motivo2"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintWidth_percent="0.2" />

            <Spinner
                android:id="@+id/motivo2"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hapticFeedbackEnabled="true"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toTopOf="@+id/motivo3"
                app:layout_constraintEnd_toStartOf="@+id/perda2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/motivo1"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/perda2"
                style="android.R.drawable.custom_background_effect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:autofillHints="Hint"
                android:backgroundTint="#C3C3C3"
                android:clickable="false"
                android:hint="@string/perdas"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="23sp"
                android:tooltipText="Digite aqui o motivo"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/motivo2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/motivo1"
                app:layout_constraintTop_toTopOf="@+id/motivo2"
                app:layout_constraintWidth_percent="0.2" />

            <Spinner
                android:id="@+id/motivo3"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hapticFeedbackEnabled="true"

                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toTopOf="@+id/motivo4"
                app:layout_constraintEnd_toStartOf="@+id/perda1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/motivo2"
                app:layout_constraintWidth_percent="0.8" />


            <EditText
                android:id="@+id/perda3"
                style="android.R.drawable.custom_background_effect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:autofillHints="Hint"
                android:backgroundTint="#C3C3C3"
                android:clickable="false"
                android:dropDownSelector="@color/white"
                android:hint="@string/perdas"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="23sp"
                android:tooltipText="Digite aqui o motivo"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/motivo3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/motivo2"
                app:layout_constraintTop_toTopOf="@+id/motivo3"
                app:layout_constraintWidth_percent="0.2" />

            <Spinner
                android:id="@+id/motivo4"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:hapticFeedbackEnabled="true"

                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toTopOf="@+id/motivo5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/motivo3"
                app:layout_constraintWidth_percent="0.8" />


            <EditText
                android:id="@+id/perda4"
                style="android.R.drawable.custom_background_effect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:autofillHints="Hint"
                android:backgroundTint="#C3C3C3"
                android:clickable="false"
                android:dropDownSelector="@color/white"
                android:hint="@string/perdas"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="23sp"
                android:tooltipText="Digite aqui o motivo"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/motivo4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/motivo4"
                app:layout_constraintTop_toTopOf="@+id/motivo4"
                app:layout_constraintWidth_percent="0.2" />


            <Spinner
                android:id="@+id/motivo5"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="0dp"
                android:layout_height="45dp"

                android:hapticFeedbackEnabled="true"

                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toTopOf="@+id/motivo6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/motivo4"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/perda5"
                style="android.R.drawable.custom_background_effect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:autofillHints="Hint"
                android:backgroundTint="#C3C3C3"
                android:clickable="false"
                android:dropDownSelector="@color/white"
                android:hint="@string/perdas"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:textSize="23sp"
                android:tooltipText="Digite aqui o motivo"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/motivo5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/motivo5"
                app:layout_constraintTop_toTopOf="@+id/motivo5"
                app:layout_constraintWidth_percent="0.2" />

            <Spinner
                android:id="@+id/motivo6"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hapticFeedbackEnabled="true"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/motivo5"
                app:layout_constraintWidth_percent="0.8" />


            <EditText
                android:id="@+id/perda6"
                style="android.R.drawable.custom_background_effect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:autofillHints="Hint"
                android:backgroundTint="#C3C3C3"
                android:clickable="false"
                android:dropDownSelector="@color/white"
                android:hint="@string/perdas"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="23sp"
                android:tooltipText="Digite aqui o motivo"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/motivo6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/motivo6"
                app:layout_constraintTop_toTopOf="@+id/motivo6"
                app:layout_constraintWidth_percent="0.2" />

            <Space
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/motivo6"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <!--</LinearLayout>-->

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            app:navigationIconTint="@color/white"
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@color/blue_700"
            app:backgroundTint="@color/blue_700"
            app:hideOnScroll="true"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextColor="@color/white"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="#000000"
            app:layout_anchor="@id/bottomAppBar"
            app:layout_anchorGravity="center">

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_margin="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#146683"
                android:indeterminate="false"
                android:keyboardNavigationCluster="false"
                android:max="2"
                android:maxWidth="10dp"
                android:maxHeight="5dp"
                android:minWidth="10dp"
                android:minHeight="5dp"
                android:progress="2"
                android:progressTint="#FFFFFF" />

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#146683"
                android:indeterminate="false"
                android:keyboardNavigationCluster="false"
                android:layout_margin="5px"
                android:max="2"
                android:maxWidth="10dp"
                android:maxHeight="5dp"
                android:minWidth="10dp"
                android:minHeight="5dp"
                android:progress="2"
                android:progressTint="#FFFFFF" />

        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="3dp"
            android:elevation="15dp"
            android:contentDescription="@string/finalizar"
            android:src="@drawable/ic_baseline_done_24"
            android:tooltipText="Finalizar" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


