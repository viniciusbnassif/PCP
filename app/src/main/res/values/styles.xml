<?xml version="1.0" encoding="utf-8"?>


<resources>
    <style name="buttonSuccess" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/suSuccessGreen</item>
        <item name="icon">@drawable/ic_baseline_check_circle_24</item>
        <item name="iconTint">@color/suSuccessGreen</item>
        <item name="backgroundTint">@color/lightSuccessGreen</item>
        <item name="android:minWidth">60dip</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="iconPadding">2dp</item>
        <item name="strokeColor">@color/suSuccessGreen</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="buttonError">
        <item name="android:textColor">@color/suErrorRed</item>
        <item name="icon">@drawable/baseline_cancel_24</item>
        <item name="iconTint">@color/suErrorRed</item>
        <item name="backgroundTint">@color/lightErrorRed</item>
        <item name="android:minWidth">60dip</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="iconPadding">2dp</item>
        <item name="strokeColor">@color/suErrorRed</item>
        <item name="strokeWidth">1dp</item>

    </style>

    <style name="buttonNeutral">
        <item name="android:textColor">@color/black</item>
        <item name="icon">@drawable/ic_baseline_remove_circle_24</item>
        <item name="iconTint">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:minWidth">60dip</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="iconPadding">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>

        <!--item name="elevation">15dp</item>
        <item name="android:outlineSpotShadowColor">#090909</item>
        <item name="android:shadowRadius">15</item-->
    </style>


</resources>